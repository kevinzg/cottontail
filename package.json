{
    "name": "cottontail",
    "private": true,
    "version": "1.0.2",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build -c vite.pages.config.ts && vite build -c vite.content.config.ts && cd dist/ && zip -r -FS cottontail.xpi *",
        "build-dev": "vite build -m dev -c vite.pages.config.ts && vite build -m dev -c vite.content.config.ts",
        "build-source": "git archive --format=zip --output dist/source.zip HEAD",
        "preview": "vite preview",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^2.0.2",
        "@tailwindcss/forms": "^0.5.0",
        "@tailwindcss/typography": "^0.5.2",
        "@tsconfig/svelte": "^3.0.0",
        "@types/webextension-polyfill": "^0.10.0",
        "autoprefixer": "^10.4.4",
        "postcss": "^8.4.12",
        "prettier": "^2.6.1",
        "prettier-plugin-svelte": "^2.6.0",
        "prettier-plugin-tailwindcss": "^0.2.3",
        "svelte": "^3.55.1",
        "svelte-check": "^3.0.3",
        "svelte-preprocess": "^5.0.1",
        "tailwindcss": "^3.0.23",
        "tslib": "^2.3.1",
        "tsm": "^2.2.1",
        "typescript": "^4.9.3",
        "uvu": "^0.5.3",
        "vite": "^4.1.0"
    },
    "dependencies": {
        "dexie": "^3.2.1",
        "rxjs": "^7.5.5",
        "webextension-polyfill": "^0.10.0"
    }
}
